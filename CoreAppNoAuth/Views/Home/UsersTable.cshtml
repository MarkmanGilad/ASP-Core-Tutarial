@model System.Data.DataTable;
@using System.Data;
@{
    ViewData["Title"] = "UsersTable";
}

<h1>UsersTable</h1>
<table class='table'>
    <thead>
        <tr>
            @foreach (DataColumn column in Model.Columns)
            {
                <th>@column.ColumnName</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                @foreach (DataColumn column in Model.Columns)
                {
                    <td>@row[column]</td>
                }
            </tr>
        }
    </tbody>
</table>


